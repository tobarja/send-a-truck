{% macro input(name, value, type, size) %}
  <input type="{{ type|default('text') }}" name="{{ name }}" value="{{ value|e }}" size="{{ size|default(20) }}" />
{% endmacro %}
{% import _self as forms %}
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="/site.css">
        <meta name="viewport" content="width=device-width">
    </head>
    <body>
        {% include 'menu.twig' %}
        <h1>Add User</h1>
        <form action="new" method="post">
            <table>
                <tr>
                    <td>Company:</td>
                    <td>{{ forms.input("company_name") }}</td>
                </tr>
                <tr>
                    <td>Contact First Name:</td>
                    <td>{{ forms.input("first_name") }}</td>
                </tr>
                <tr>
                    <td>Contact Last Name:</td>
                    <td>{{ forms.input("last_name") }}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{ forms.input("email") }}</td>
                </tr>
                <tr>
                    <td>Telephone:</td>
                    <td>{{ forms.input("telephone") }}</td>
                </tr>
                <tr>
                    <td>Address (Line 1):</td>
                    <td>{{ forms.input("address1") }}</td>
                </tr>
                <tr>
                    <td>Address (Line 2):</td>
                    <td>{{ forms.input("address2") }}</td>
                </tr>
                <tr>
                    <td>City:</td>
                    <td>{{ forms.input("city") }}</td>
                </tr>
                <tr>
                    <td>State:</td>
                    <td>{{ forms.input("state") }}</td>
                </tr>
                <tr>
                    <td>Zip:</td>
                    <td>{{ forms.input("zip") }}</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td><input type="submit" name="Submit" value="Add" /></td>
                </tr>
            </table>
        </form>
    </body>
</html>
